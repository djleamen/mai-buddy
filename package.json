{
  "name": "mai-buddy",
  "version": "1.0.0",
  "description": "Mai Buddy is a highly customizable, personal AI agent",
  "main": "src/main/main.js",
  "type": "commonjs",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run watch\" \"electron .\"",
    "watch": "nodemon --watch src --ext js,json,html,css --exec \"electron .\"",
    "build": "electron-builder",
    "build-mac": "electron-builder --mac",
    "build-win": "electron-builder --win",
    "build-linux": "electron-builder --linux",
    "test": "jest",
    "test-mcp": "node test-mcp.js",
    "lint": "eslint src/",
    "setup": "npm install && npm run setup-mcp",
    "setup-mcp": "echo 'ðŸ”§ MCP setup complete! Run npm run test-mcp to verify.'"
  },
  "keywords": [
    "ai",
    "assistant",
    "gpt",
    "elevenlabs",
    "mcp",
    "desktop",
    "electron"
  ],
  "author": "djleamen",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^35.7.5",
    "electron-builder": "^26.6.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2"
  },
  "dependencies": {
    "@notionhq/client": "^5.6.0",
    "@octokit/rest": "^20.1.2",
    "@slack/web-api": "^7.13.0",
    "axios": "^1.13.5",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dockerode": "^4.0.9",
    "dotenv": "^16.3.1",
    "electron-store": "^8.1.0",
    "elevenlabs": "^1.59.0",
    "express": "^4.22.1",
    "fs-extra": "^11.2.0",
    "glob": "^13.0.0",
    "hotkeys-js": "^3.12.2",
    "node-audiorecorder": "^3.0.0",
    "node-record-lpcm16": "^1.0.1",
    "openai": "^4.24.1",
    "path": "^0.12.7",
    "socket.io": "^4.7.4",
    "socket.io-client": "^4.7.4",
    "speech-recognition": "^0.0.1",
    "uuid": "^9.0.1",
    "ws": "^8.16.0"
  },
  "build": {
    "appId": "com.djleamen.mai-buddy",
    "productName": "Mai Buddy",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "assets/icon.icns"
    },
    "win": {
      "icon": "assets/icon.ico"
    },
    "linux": {
      "icon": "assets/icon.png"
    }
  }
}
